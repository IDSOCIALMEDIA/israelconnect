ShellBot.InlineKeyboardButton --button 'botao1' --line 4 --text ':yt: COMO CONFIGURAR :yt: ' --callback_data '2' --url 'https://api.whatsapp.com/send?phone=5593999739304&text=*N√ÉO20SEI%20USAR*'
ShellBot.regHandleFunction --function criarteste --callback_data gerarssh
